{
  "name": "desmjs-monorepo-root",
  "description": "Root for the DesmJS monorepo",
  "private": true,
  "contributors": [
    "Manuel Turetta <manuel@forbole.com>",
    "Riccardo Montagnin <riccardo@forbole.com>"
  ],
  "license": "Apache-2.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/",
    "*.md",
    "!*.spec.*",
    "!**/testdata/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/desmos-labs/dapp-sdk"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "workspaces": [
    "packages/core",
    "packages/types",
    "packages/walletconnect",
    "packages/keplr"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --parallel --verbose run build",
    "lint": "yarn workspaces foreach --topological-dev --parallel --verbose run lint",
    "lint-fix": "yarn workspaces foreach --topological-dev --parallel --verbose run lint-fix",
    "publish-latest": "yarn workspaces foreach --no-private exec npm publish"
  },
  "devDependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.29.4",
    "@cosmjs/crypto": "^0.29.4",
    "@cosmjs/encoding": "^0.29.4",
    "@cosmjs/proto-signing": "^0.29.4",
    "@cosmjs/utils": "^0.29.4",
    "@desmoslabs/desmjs": "workspace:packages/core",
    "@desmoslabs/desmjs-types": "workspace:packages/types",
    "@types/long": "^4.0.1",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@walletconnect/jsonrpc-types": "^1.0.2",
    "eslint": "^8.28.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.3",
    "ts-proto": "^1.134.0",
    "tsc": "^2.0.4",
    "typescript": "^4.9.3"
  },
  "packageManager": "yarn@3.1.1"
}
