{
  "name": "desmjs-monorepo-root",
  "description": "Root for the DesmJS monorepo",
  "private": true,
  "author": "Manuel Turetta <manuel@forbole.com>",
  "license": "Apache-2.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/",
    "*.md",
    "!*.spec.*",
    "!**/testdata/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/desmos-labs/dapp-sdk"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "workspaces": [
    "packages/core",
    "packages/types",
    "packages/walletconnect"
  ],
  "scripts": {
    "build": "yarn build-core && yarn build-types && yarn build-walletconnect",
    "publish": "yarn publish-core && yarn publish-types && yarn publish-walletconnect",
    "build-core": "yarn workspace @desmoslabs/desmjs build",
    "publish-core": "yarn workspace @desmoslabs/desmjs npm publish",
    "build-types": "yarn workspace @desmoslabs/desmjs-types build",
    "publish-types": "yarn workspace @desmoslabs/desmjs-types npm publish",
    "build-walletconnect": "yarn workspace @desmoslabs/desmjs-walletconnect build",
    "publish-walletconnect": "yarn workspace @desmoslabs/desmjs-walletconnect npm publish",
    "lint": "pretty-quick packages --staged && lint-staged"
  },
  "devDependencies": {
    "@cosmjs/crypto": "^0.27.1",
    "@cosmjs/encoding": "^0.27.1",
    "@cosmjs/proto-signing": "^0.27.1",
    "@cosmjs/utils": "^0.27.1",
    "@desmoslabs/desmjs": "workspace:packages/core",
    "@desmoslabs/desmjs-types": "workspace:packages/types",
    "@types/long": "^4.0.1",
    "@types/pino": "^6.3.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@walletconnect/jsonrpc-types": "^1.0.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-proto": "^1.82.5",
    "typescript": "^4.5.5"
  },
  "packageManager": "yarn@3.1.1"
}
