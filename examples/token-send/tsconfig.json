{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "outDir": "build",
    "experimentalDecorators": true,
    "rootDir": "src",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ]
}
